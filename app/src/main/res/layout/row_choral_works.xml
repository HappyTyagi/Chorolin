<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/image_height_width">

    <LinearLayout
        android:id="@+id/row_choralworks_layoutRow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="15dp"
        android:background="@drawable/rounded_choral_works_item">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/voice_type_symbol"/>

        <TextView
            android:id="@+id/row_choralworks_txtWorkTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="rgtrbgtrbt"
            android:textSize="@dimen/font_size"

            android:textColor="@color/colorPrimaryDark"/>



    </LinearLayout>

</LinearLayout>